@model IEnumerable<Navette.Models.GesUserViewModel>

@{
    ViewBag.Title = "IndexClient";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Les Administrateurs</h2>

<p>
    <a href="@Url.Action("CreateAdmin", "Account" )" class="btn btn-success"> <i class="fas fa-plus-circle"></i> Ajouter</a>
</p>
<table class="table">
    <tr>

        <th>
            Utilisateur
        </th>

        <th>
            Mobile
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                <i class="fas fa-edit"></i>  @Html.ActionLink("Modifier", "ModifierAdmin", new { iduser = item.iduser }) |
                <i class="fas fa-eye"></i>  @Html.ActionLink("Details", "DetailsAdmin", new { iduser = item.iduser }) |
                <i class="fas fa-trash"></i>     @Html.ActionLink("Supprimer", "DeleteAdmin", new { iduser = item.iduser })
            </td>
        </tr>
    }

</table>

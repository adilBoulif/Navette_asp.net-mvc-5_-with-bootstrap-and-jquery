@model IEnumerable<Navette.Models.Offres>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>les offres </h2>

<p>
    <a href="@Url.Action("Create", "Offres" )" class="btn btn-success"> <i class="fas fa-plus-circle"></i> Ajouter</a> 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.h_depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.h_retour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prix)
        </th>
        <th>
           Société
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.depart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.h_depart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.h_retour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strans.nom)
            </td>
            <td>
                <i class="fas fa-edit"></i>  @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                <i class="fas fa-eye"></i>  @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <i class="fas fa-trash"></i>     @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

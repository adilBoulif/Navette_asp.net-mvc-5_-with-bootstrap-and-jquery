@model IEnumerable<Navette.Models.Abonments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Les Abonnements</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Offre.description)
        </th>
        <th>
       Société du transport
        </th>
        <th>
          Utilisateur
        </th>
        <th>
           Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Offre.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Offre.strans.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_Abon)
        </td>
        <td>
          
            <i class="fas fa-eye"></i>  @Html.ActionLink("Details", "Details", new { id = item.id }) |
            <i class="fas fa-trash"></i>     @Html.ActionLink("Supprimer", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>

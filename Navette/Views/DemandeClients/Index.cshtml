@model IEnumerable<Navette.Models.DemandeClient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Demande du client</h2>

<p>
    <a href="@Url.Action("CreateAdmin", "DemandeClients" )" class="btn btn-success"> <i class="fas fa-plus-circle"></i> Ajouter</a> 
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.h_depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.h_destination)
        </th>
        <th>
           Nombre des demandes
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.depart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.h_depart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.h_destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.num_demande)
        </td>
        <td>
            <i class="fas fa-edit"></i>  @Html.ActionLink("Modifier", "Edit", new { id = item.id }) |
            <i class="fas fa-eye"></i>  @Html.ActionLink("Details", "Details", new { id = item.id }) |
            <i class="fas fa-trash"></i>     @Html.ActionLink("Supprimer", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>

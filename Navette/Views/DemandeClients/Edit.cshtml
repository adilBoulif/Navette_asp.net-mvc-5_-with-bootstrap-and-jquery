@model Navette.Models.DemandeClient

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> Modifier une Demande Client</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="row">
            <div class="form-group col-md-6">
                <select class="custom-select form-control col-md-6" name="depart">
                    <option selected>Choisir votre départ</option>
                    <option value="Kenitra"  @if (Model.depart == "Kenitra") { <text>selected </text>  }>Kenitra</option>
                    <option value="Rabat" @if (Model.depart == "Rabat") { <text>selected </text>  }>Rabat</option>
                    <option value="Casablanca" @if (Model.depart == "Casablanca") { <text>selected </text>  }>Casablanca</option>
                </select>

                @Html.ValidationMessageFor(model => model.depart, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-6">
                <select class="custom-select form-control col-md-6" name="destination">
                    <option selected>Choisir votre destination</option>
                    <option  value="Kenitra" @if (Model.destination == "Kenitra") { <text>selected </text>  }>Kenitra</option>
                    <option value="Rabat" @if (Model.destination == "Rabat") { <text>selected </text>  }>Rabat</option>
                    <option value="Casablanca" @if (Model.destination == "Casablanca") { <text>selected </text>  }>Casablanca</option>
                </select>


                @Html.ValidationMessageFor(model => model.destination, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-6">
                <label for="appt">Depart:</label>
                <input type="time" id="appt" name="h_depart" value=@Model.h_depart>


                @Html.ValidationMessageFor(model => model.h_depart, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-6">
                <label for="appt">Destination:</label>
                <input type="time" id="appt" name="h_destination" value=@Model.h_destination>


                @Html.ValidationMessageFor(model => model.h_destination, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-6">
                Nombre des demandes
             <br />
                    @Html.EditorFor(model => model.num_demande, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.num_demande, "", new { @class = "text-danger" })
             
            </div>



            <div class="form-group col-md-6">
                <div >
                    <input type="submit" value="Energistrer" class="btn btn-primary" style="margin-top: 23px;width: 264px;" />
                </div>
            </div>
        </div>
        
    </div>}
<div>
    @Html.ActionLink("Retourner à la Liste", "Index")
</div>
